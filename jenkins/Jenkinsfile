pipeline {
    agent {
        docker {
            image 'node:18.17.0-alpine'
            args '-p 5500:500'
        }
    }
    parameters { 
        choice choices: ['YES', 'NO'], description: 'TEST?', name: 'TEST'
    }
    environment {
        CI = 'true'
    }
    stages {
        stage('Compile') {
            steps {
                sh 'npm install'
            }
        }
        stage('Test') {
            when {
               expression { params.TEST == 'YES' }
            }
            steps {
                sh 'npm test'
            }
        }
        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }
    }
}
